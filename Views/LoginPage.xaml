<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.LoginPage"
             Title="Войдите в учетную запись"
             BackgroundColor="White">

    <VerticalStackLayout x:Name="LoginLayout">
        <Label 
            Text="Войти"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="20"/>
        <Entry x:Name="LoginEntry" ClearButtonVisibility="WhileEditing" Placeholder="Логин" PlaceholderColor="Black"/>
        <Entry x:Name="PasswordEntry" ClearButtonVisibility="WhileEditing" Placeholder="Пароль" PlaceholderColor="Black"/>
        <Button Text="Подтвердить" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>