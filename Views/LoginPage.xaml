<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.LoginPage"
             Title="Войдите в учетную запись">

    <VerticalStackLayout x:Name="LoginLayout" HorizontalOptions="Fill" VerticalOptions="Center">
        <Entry x:Name="LoginEntry" ClearButtonVisibility="WhileEditing" Placeholder="Логин" PlaceholderColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Black}}"/>
        <Entry x:Name="PasswordEntry" ClearButtonVisibility="WhileEditing" Placeholder="Пароль" PlaceholderColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Black}}" IsPassword="True"/>
        <Button Text="Подтвердить" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>